package Methods_Lab_4;
import java.util.Scanner;
public class SignofIntegerNumbers_1 {
    public static void main(String[] args) {
        Scanner scanner=new Scanner(System.in);
        int number=Integer.parseInt(scanner.nextLine());
        Number(number);

    }
    public static void Number(int x){
        if(x>0){
            System.out.printf("The number %d is positive.%n",x);
        }
        else if(x<0){
            System.out.printf("The number %d is negative.%n",x);
        }
        else{
            System.out.printf("The number %d is zero.%n",x);
        }
    }
}
